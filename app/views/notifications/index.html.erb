<%= turbo_stream_from "notifications_#{current_user.id}" %>


<div class="max-w-3xl mx-auto mt-10 bg-white p-6 rounded shadow">
  <h1 class="text-2xl font-bold mb-4">Notificaciones</h1>

  <%= turbo_stream_from "notifications_#{current_user.id}" %>

  <div id="notifications">
    <% if @notifications.any? %>
      <%= render @notifications %>
    <% else %>
      <p class="text-gray-500">No tienes notificaciones.</p>
    <% end %>
  </div>

  <%= link_to "Volver", root_path, class: "inline-block mt-4 bg-gray-500 text-white px-4 py-2 rounded" %>
</div>
