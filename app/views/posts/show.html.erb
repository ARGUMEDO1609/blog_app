<div class="max-w-3xl mx-auto py-8 px-4 bg-white rounded shadow">
  <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= @post.title %></h1>
  <p class="text-sm text-gray-500 mb-4">Por <%= @post.user.email %></p>

  <div class="prose prose-slate mb-6">
    <%= simple_format(@post.body) %>
  </div>

  <% if @post.tags.any? %>
    <div class="mb-4 flex flex-wrap gap-2">
      <% @post.tags.each do |tag| %>
        <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded text-xs">#<%= tag.name %></span>
      <% end %>
    </div>
  <% end %>

  <div class="flex gap-2 mb-6">
    <%= link_to "Editar", edit_post_path(@post), class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded shadow" %>
    <%= link_to "Eliminar", @post, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded shadow" %>
    <%= link_to "Volver", posts_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded shadow" %>
  </div>

  <hr class="my-8">

  <h2 class="text-xl font-semibold text-gray-800 mb-4">Comentarios</h2>

  <%= render partial: "comments/form", locals: { commentable: @post } %>

  <div id="comments_<%= dom_id(@post) %>" class="mt-4 space-y-4">
    <%= render partial: "comments/comment", collection: @post.comments, as: :comment %>
  </div>
</div>
