<div class="max-w-3xl mx-auto mt-8 bg-white p-4 rounded shadow">
  <h1 class="text-2xl font-bold"><%= @post.title %></h1>
  <p class="text-sm text-gray-600">Por <%= @post.user.email %></p>
  <p class="mt-4"><%= simple_format(@post.body) %></p>

  <div class="mt-4">
    <% @post.tags.each do |tag| %>
      <span class="inline-block bg-gray-100 px-2 py-1 rounded text-sm mr-2">#<%= tag.name %></span>
    <% end %>
  </div>

  <div class="mt-6 flex gap-2">
    <%= link_to "Editar", edit_post_path(@post), class: "bg-yellow-500 text-white px-4 py-2 rounded" %>
    <%= link_to "Eliminar", @post, method: :delete, data: { confirm: "Â¿Seguro?" }, class: "bg-red-600 text-white px-4 py-2 rounded" %>
    <%= link_to "Volver", posts_path, class: "bg-gray-500 text-white px-4 py-2 rounded" %>
  </div>

  <hr class="my-6">

  <%= render partial: "comments/form", locals: { commentable: @post } %>
  <div id="comments_<%= dom_id(@post) %>">
    <%= render partial: "comments/comment", collection: @post.comments, as: :comment %>
  </div>
</div>
