<%= form_with(model: post, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: "block font-bold mb-1" %>
    <%= form.text_field :title, class: "w-full border p-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :body, class: "block font-bold mb-1" %>
    <%= form.text_area :body, class: "w-full border p-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= label_tag :tag_list, "Etiquetas (separadas por coma)", class: "block font-bold mb-1" %>
    <%= text_field_tag :tag_list, post.tags.pluck(:name).join(", "), class: "w-full border p-2 rounded" %>
  </div>

  <div class="mt-4">
    <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
